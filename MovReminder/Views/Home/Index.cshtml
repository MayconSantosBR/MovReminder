@using MovReminder.Data.Entities;
@{
    var watcheds = ViewData["Watcheds"] as List<WatchedMovie>;
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    @{
        ViewData["Title"] = "Homepage";
    }

    <style>

        .scroll {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            width: 180vh;
            height: 40vh;
            padding: 15px 2%;
            overflow-y: scroll;
            box-shadow: 0 0 5px solid gray;
        }

        .footer {
            background-color: white;
        }

        .badge {
            font-size: 1.7vh;
            top: 15vh;
            margin-right: 15vh;
            height: 5vh;
            border-radius: 15px;
        }
    </style>
</head>

<div class="scroll">
    <table class="table table-white table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome do filme</th>
                <th scope="col">Data</th>
                <th scope="col">Feedback</th>
            </tr>
        </thead>

        <tbody>
            @{
                var count = 0;
                foreach (var watched in watcheds)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@watched.IdMovieNavigation.Name</td>
                        <td>@watched.Date</td>
                        @{
                            if(watched.Liked == true)
                            {
                                <td><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-emoji-smile" viewBox="0 0 16 16">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="M4.285 9.567a.5.5 0 0 1 .683.183A3.498 3.498 0 0 0 8 11.5a3.498 3.498 0 0 0 3.032-1.75.5.5 0 1 1 .866.5A4.498 4.498 0 0 1 8 12.5a4.498 4.498 0 0 1-3.898-2.25.5.5 0 0 1 .183-.683zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zm4 0c0 .828-.448 1.5-1 1.5s-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5z"/>
</svg></td>
                            }
                            else if(watched.Liked == false)
                            {
                                <td><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-emoji-frown" viewBox="0 0 16 16">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="M4.285 12.433a.5.5 0 0 0 .683-.183A3.498 3.498 0 0 1 8 10.5c1.295 0 2.426.703 3.032 1.75a.5.5 0 0 0 .866-.5A4.498 4.498 0 0 0 8 9.5a4.5 4.5 0 0 0-3.898 2.25.5.5 0 0 0 .183.683zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zm4 0c0 .828-.448 1.5-1 1.5s-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5z"/>
</svg></td>
                            }
                        }
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
