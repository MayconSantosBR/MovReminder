@using MovReminder.Data.Entities;
@{
    var genders = ViewData["Genders"] as List<Gender>;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

<div class="position-relative">

    <p class="fs-2">Cadastrar filme</p>

</div>

<form class="row g-3">
    <div class="col-md-6">
        <label for="name" class="form-label">Nome do filme</label>
        <input type="text" class="form-control" name="name" id="name">
    </div>
    <div class="col-md-6">
        <label for="nadirectorme" class="form-label">Nome do diretor</label>
        <input type="text" class="form-control" name="director" id="director">
    </div>
    <div class="col-md-6">
        <label for="gender" class="form-label">Genero</label>
        <select class="form-control" name="gender" id="gender">
            @{
                foreach(var gender in genders)
                {
                    <option value="@gender.IdGender">@gender.Name</option>
                }
            }
        </select>
    </div>
    <div class="col-md-6">
        <label for="data" class="form-label">Estreia</label>
        <input type="date" class="form-control" name="data" id="data">
    </div>
    <div class="col-md-6">
        <label for="duration" class="form-label">Duração (em minutos)</label>
        <input type="number" class="form-control" name="duration" id="duration">
    </div>
    <div class="col-md-8">
        <button type="submit" class="btn btn-primary" asp-controller="Register" asp-action="CreateMovie" asp-route-email="email" asp-route-password="password" asp-route-username="username">Cadastrar</button>
    </div>
</form>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>