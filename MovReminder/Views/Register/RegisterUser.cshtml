<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

<div class="position-relative">

    <p class="fs-2">Cadastre-se</p>

</div>

<form class="row g-3">
    <div class="col-md-6">
        <label for="username" class="form-label">Nome de usuário</label>
        <input type="text" class="form-control" name="username" id="username">
    </div>
    <div class="col-md-6">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" class="form-control" name="email" id="email">
    </div>
    <div class="col-md-6">
        <label for="senha" class="form-label">Senha</label>
        <input type="password" class="form-control" name="password" id="password">
    </div>
    <div class="col-md-8">
        <button type="submit" class="btn btn-primary" asp-controller="Register" asp-action="CreateUser" asp-route-email="email" asp-route-password="password" asp-route-username="username">Cadastrar</button>
    </div>
</form>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>